#!/bin/sh

set -o errexit

cd /Volumes/ramdisk
git clone -s /Volumes/Storage/Work/mirrors/gzdoom-macos zdoom$1

cd zdoom$1
git remote remove origin
git remote add origin https://github.com/alexey-lysiuk/gzdoom.git
git remote add rheit https://github.com/rheit/zdoom.git
git remote add coelckers https://github.com/coelckers/gzdoom.git
git remote add eruanna https://github.com/raa-eruanna/qzdoom.git
git fetch --all
git checkout -b master origin/master
git branch -D macOS
